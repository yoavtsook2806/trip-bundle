{
  "name": "trip-bundle-pwa",
  "version": "1.0.0",
  "description": "Trip Bundle Progressive Web App",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev-mock": "VITE_MOCK=true vite",
    "build": "VITE_MOCK=true GITHUB_PAGES=true tsc && vite build",
    "build:mock": "VITE_MOCK=true GITHUB_PAGES=true tsc && vite build",
    "build:prod": "VITE_MOCK=false GITHUB_PAGES=true tsc && vite build",
    "preview": "vite preview",
    "serve:local": "python3 -m http.server 8080 -d dist",
    "predeploy:mock": "npm run build:mock",
    "deploy:mock": "gh-pages -d dist -b gh-pages",
    "predeploy:prod": "npm run build:prod", 
    "deploy:prod": "gh-pages -d dist -b gh-pages-prod",
    "build:both": "npm run build:mock && mkdir -p builds/mock && cp -r dist/* builds/mock/ && npm run build:prod && mkdir -p builds/prod && cp -r dist/* builds/prod/",
    "deploy:both": "npm run deploy:mock && npm run deploy:prod",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "mobx": "^6.13.7",
    "mobx-react-lite": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.6",
    "gh-pages": "^6.3.0",
    "typescript": "^5.2.2",
    "vite": "^5.2.0",
    "vite-plugin-pwa": "^0.19.0",
    "workbox-window": "^7.0.0"
  }
}
