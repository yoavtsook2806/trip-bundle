{
  "name": "trip-bundle",
  "version": "1.0.0",
  "private": true,
  "description": "A trip bundle monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --all --fail-fast run build",
    "dev": "yarn workspaces foreach --all run dev",
    "dev-mock": "yarn workspace trip-bundle-pwa dev-mock",
    "test": "yarn workspaces foreach --all --fail-fast run test",
    "lint": "yarn workspaces foreach --all --fail-fast run lint",
    "lint-fix": "yarn workspaces foreach --all --fail-fast run lint-fix"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "packageManager": "yarn@4.0.0",
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=4.0.0"
  }
}
